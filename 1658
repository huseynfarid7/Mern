<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Factorial finder</title>
    <script>
        function Factorial() {
            var number = parseInt(prompt("Enter a number between 0 and 20:"));

            if (number >= 0 && number <= 20) {
                var factorial = 1;

                for (var i = 1; i <= number; i++) {
                    factorial *= i;
                }
                alert(factorial);
            } else {
                alert("Please enter a number between 0 and 20.");
            }
        }
    </script>
</head>
<body>
    <h2>Factorial finder</h2>
    <button onclick="Factorial()">tap here</button>
</body>
</html>
